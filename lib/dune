(library
 (name pi4)
 (public_name pi4)
 (preprocess
  (pps ppx_jane))
 (libraries bitv core fmt logs menhirLib owl-base petr4 z3))

(include_subdirs no)

(ocamllex lexer)

(menhir
 (flags --table)
 (modules parser))

(rule
 (deps parser.messages parser.mly)
 (targets parser_messages.ml)
 (action
  (with-stdout-to
   %{targets}
   (run menhir --compile-errors %{deps}))))
